<style>
  html,
  body {
    height: 100dvh;
    margin: 0;
  }

  body {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #e50914;
  }

  .netflix {
    display: block;
    width: 100vmin;
    height: 100vmin;
    margin: 0 auto;
  }

  .netflix path {
    fill: black;
    animation-duration: 1s;
    animation-iteration-count: infinite;
    animation-direction: alternate;
  }

  .no1 path:nth-child(odd),
  .no2 path:nth-child(even) {
    fill: white;
  }

  .netflix path:nth-child(2) {
    animation-delay: -0.2s;
  }
  .netflix path:nth-child(3) {
    animation-delay: -0.4s;
  }
  .netflix path:nth-child(4) {
    animation-delay: -0.6s;
  }
  .netflix path:nth-child(5) {
    animation-delay: -0.8s;
  }
  .netflix path:nth-child(6) {
    animation-delay: -1s;
  }

  .no1 .n {
    animation-name: n1;
  }
  .no1 .e {
